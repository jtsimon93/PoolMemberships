<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        x:Class="PoolMemberships.Views.AboutWindow"
        Icon="avares://PoolMemberships/Assets/app-icon.png"
        Title="About Pool Membership Manager">
    <StackPanel Spacing="10" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Pool Membership Manager" FontSize="24" FontWeight="Bold" />
        <TextBlock Text="Version 1.0.0" FontSize="16" />
        <TextBlock
            TextWrapping="Wrap"
            Text="This application is for managing outside pool memberships." />
    </StackPanel>
</Window>